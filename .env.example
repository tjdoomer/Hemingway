# Hemingway Configuration
# ========================

# API Keys for Cloud Models (Work Agents)
# ---------------------------------------
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# LMStudio Local Server (Personal Agents)
# ---------------------------------------
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_ENABLED=true

# Google Integration (Calendar/Gmail)
# ------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# GitHub Integration
# ------------------
GITHUB_TOKEN=ghp_...

# Slack Integration
# -----------------
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...

# Voice Settings
# --------------
VOICE_ENABLED=true
VOICE_WAKE_WORD=hemingway

# Memory Configuration
# --------------------
MEMORY_DB_PATH=~/.hemingway/memory.db
MEMORY_VECTOR_ENABLED=false

# Agent Preferences
# -----------------
DEFAULT_WORK_MODEL=gpt-4-turbo
DEFAULT_PERSONAL_MODEL=local
WORK_AGENT_TIMEOUT_MS=60000
PERSONAL_AGENT_TIMEOUT_MS=30000

# Logging
# -------
LOG_LEVEL=info
LOG_FILE=~/.hemingway/hemingway.log
